
<div class="container">
  <div class="mt-3 txt-center">
    <h1 class="h1">写真一覧</h1>
  </div>
  <div class="txt-center mt-3">
    <%= link_to '新しい写真を追加', new_photo_path, class: 'button is-primary' %>
  </div>
    <% if @photos.present? %>
      <div class="grid mt-3 p-3 bg-gray-50">
        <% @photos.each do |photo| %>
          <div class="card">
            <h2 class="card-title"><%= photo.title %></h2>
            <div class="card-body">
              <% if photo.image.attached? %>
                <%= image_tag photo.image.variant(resize_to_fill: [300, 300]), alt: 'photo' %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
</div>
