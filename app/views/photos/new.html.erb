
<div class="container">
  <div class="mt-3 txt-center">
    <h1 class="h1">写真アップロード</h1>
  </div>
  <%= render "shared/error_messages", object: @photo %>
  <%= form_with model: @photo, method: :post, local: true do |form| %>
    <div class="form-wrapper mt-3">
      <div class="form-group">
        <div class="input-group">
          <%= form.label :title, "タイトル", class: "form-label" %>
          <%= form.text_field :title, class: "form-control", placeholder: "タイトルを入力してください" %>
        </div>
        <div class="input-group">
          <%= form.label :image, "画像ファイル", class: "form-label" %>
          <%= form.file_field :image, class: "form-control" %>
        </div>
        <div class="txt-center">
          <%= form.submit "アップロード", class: "button is-primary" %>
        </div>
        <div class="txt-center">
          <%= link_to "キャンセル", photos_path, class: "button is-secondary" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
