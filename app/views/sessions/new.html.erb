<section>
  <div class="txt-center mt-3">
    <div class="container">
      <h1 class="h1">ログイン</h1>
    </div>
  </div>
</section>

<section>
  <div class="container">
    <%= form_with url: new_user_session_index_path, method: :post, local: true do |form| %>
      <div class="form-wrapper mt-3">
        <div class="form-group">
          <div class="input-group">
            <%= form.label :email, "メールアドレス", class: "form-label" %>
            <%= form.text_field :email, class: "form-control", placeholder: "テキスト入力" %>
          </div>
          <div class="input-group">
            <%= form.label :password, "パスワード", class: "form-label" %>
            <%= form.password_field :password, class: "form-control", placeholder: "パスワード入力" %>
          </div>
          <div class="txt-center">
            <%= form.submit "ログイン", class: "button is-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</section>
